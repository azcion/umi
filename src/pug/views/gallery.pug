extends ./layouts/default.pug

block vars
	- pageTitle = lang.gallery.title.jp
	- navLocation = 'gallery'

block tagline
	h1#tagline
		span #{lang.gallery.tagline.jp}

block content
	div.full-width
		div.grid.islands
			- for (let i = 0; i < 2; ++i)
				div.item.g-one-template
					canvas.umi(width='200' height='200')
			div.item.g-wide-template
				canvas.umi(width='400' height='200')
			div.item.g-tall-template
				canvas.umi(width='200' height='400')
			div.item.g-two-template
				canvas.umi(width='400' height='400')
			div.item.g-no-1-template
			div.item.g-no-2-template
		div.divider.islands.to-desert
			custom-svg(class=platform src='img/curve.svg')
		
		div.grid.desert
			- for (let i = 0; i < 3; ++i)
				div.item.g-wide-auto
					canvas.umi(width='400' height='200')
		div.divider.desert.to-forest
			custom-svg(class=platform src='img/curve.svg')
		
		div.grid.forest
			div.item.g-one-auto
				canvas.umi(width='400' height='400')
		div.divider.forest.to-arctic
			custom-svg(class=platform src='img/curve.svg')
		
		div.grid.arctic
			div.item.g-one-auto
				canvas.umi(width='400' height='400')
		div.divider.arctic.to-next
			custom-svg(class=platform src='img/curve.svg')
	div.center.large-and-bold
		span #{lang.gallery.end.jp}