extends ./layouts/default.pug

block vars
	- pageTitle = ''
	- navLocation = 'index'

block tagline
	h1#tagline
		span サンプル
		span ギャラリー

block content
	div.full-width
		div.grid.islands
			- for (let i = 0; i < 2; ++i)
				div.item.g-one
					canvas.umi(class='umi-one' width='200' height='200')
			div.item.g-wide
				canvas.umi(class='umi-wide' width='400' height='200')
			div.item.g-tall
				canvas.umi(class='umi-tall' width='200' height='400')
			div.item.g-two
				canvas.umi(class='umi-two' width='400' height='400')
			div.item.g-no-1
			div.item.g-no-2
		div.divider.islands.to-desert
			custom-svg(class=platform src='img/curve.svg')
		
		div.grid.desert
			div.grid.desert
				div.item.g-one0
					canvas.umi(class='umi-one' width='400' height='400')
				div.item.g-one0
					canvas.umi(class='umi-one' width='400' height='400')
		div.divider.desert.to-forest
			custom-svg(class=platform src='img/curve.svg')
		
		div.grid.forest
			div.item.g-one
				canvas.umi(class='umi-one' width='400' height='400')
		div.divider.forest.to-arctic
			custom-svg(class=platform src='img/curve.svg')
		
		div.grid.arctic
			div.item.g-one
				canvas.umi(class='umi-one' width='400' height='400')
		div.divider.arctic.to-next
			custom-svg(class=platform src='img/curve.svg')
	div.center.large-and-bold
		span 以降